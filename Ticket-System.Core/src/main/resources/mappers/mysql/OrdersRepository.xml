<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.apps.mybatis.mysql.OrdersRepository">

    <select id="findAll" resultType="com.apps.domain.entity.Orders">
        select *
        from orders
        <where>
            <if test="showTimes != null">
                showtimes_detail_id = #{showTimes}
            </if>
            <if test="typeUser != null">
                and profile = #{typeUser}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="creation != null">
                and creation = #{creation}
            </if>
        </where>
        <if test="sort != null">
            order by
            <choose>
                <when test="sort == 'id'">
                    id
                </when>
                <when test="sort == 'user'">
                    user_id
                </when>
                <when test="sort == 'createDate'">
                    create_date
                </when>
                <when test="sort == 'creation'">
                    creation
                </when>
                <when test="sort == 'showTimes'">
                    showtimes_detail_id
                </when>
                <otherwise>
                    profile
                </otherwise>
            </choose>
        </if>

        <if test="order != 'ASC' and sort != null" >
            DESC
        </if>

        limit #{limit} offset #{offset}
    </select>

    <select id="findAllMyOrders" resultType="com.apps.domain.entity.Orders">
        select *
            from orders
        <where>
            <if test="showTimes != null">
                showtimes_detail_id = #{showTimes}
            </if>
            <if test="typeUser != null">
                and profile = #{typeUser}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="creation != null">
                and creation = #{creation}
            </if>
        </where>
        <if test="sort != null">
            order by
            <choose>
                <when test="sort == 'id'">
                    id
                </when>
                <when test="sort == 'user'">
                    user_id
                </when>
                <when test="sort == 'createDate'">
                    create_date
                </when>
                <when test="sort == 'creation'">
                    creation
                </when>
                <when test="sort == 'showTimes'">
                    showtimes_detail_id
                </when>
                <otherwise>
                    profile
                </otherwise>
            </choose>
        </if>
        <if test="order != 'ASC' and sort != null" >
            DESC
        </if>
        limit #{limit} offset #{offset}
    </select>

    <select id="findCountAllMyOrder" resultType="INT">
        select count(*) from orders
        <where>
            <if test="showTimes != null">
                showtimes_detail_id = #{showTimes}
            </if>
            <if test="typeUser != null">
                and profile = #{typeUser}
            </if>
            <!-- <if test="userId != null">-->
            <!--     and user_id = #{userId}-->
            <!-- </if>-->
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="creation != null">
                and creation = #{creation}
            </if>
        </where>
    </select>

    <select id="findCountAll" resultType="INT">
        select count(*) from orders
        <where>
            <if test="showTimes != null">
                showtimes_detail_id = #{showTimes}
            </if>
            <if test="typeUser != null">
                and profile = #{typeUser}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="creation != null">
                and creation = #{creation}
            </if>
        </where>
    </select>

    <insert id="insertOrderConcession">
        insert into orders_detail(concession_id,orders_id,quantity) values(#{concessionId},#{ordersId},#{quantity})
    </insert>

    <insert id="insertOrderSeat">
        insert into orders_seat(orders_id,seat_id) values(#{ordersId},#{seatId})
    </insert>

    <select id="findById" resultType="com.apps.domain.entity.Orders">
        select *
        from orders
        <where>
            <if test="id != null">
                id = #{id}
            </if>
        </where>

    </select>

    <select id="findSeatInOrders" resultType="com.apps.response.entity.OrderSeats">
        select orders_id,seat_id, seat_type, tier, numbers,
               price
        from
            orders_seat
                join seat s on s.id = orders_seat.seat_id
        where orders_id = #{id}
    </select>

    <update id="updateMyOrder">
        update orders
        <set>
            <if test="order.profile != null">
                profile = #{order.profile},
            </if>
            <if test="order.userId != null">
                user_id = #{order.userId},
            </if>
            <if test="order.note != null">
                note = #{order.note},
            </if>
            <if test="order.updatedBy != null">
                updatedBy = #{order.updatedBy},
            </if>
            <if test="order.updatedAt != null">
                updatedAt = #{order.updatedAt},
            </if>
            <if test="order.status != null">
                status = #{order.status}
            </if>
        </set>
        <where>
            id = #{order.id}
        </where>
    </update>

    <update id="update">
        update orders
        <set>
            <if test="order.status != null">
                status = #{order.status}
            </if>
        </set>
        <where>
            id = #{order.id}
        </where>
    </update>
</mapper>