    <select id="findCountAll" resultType="INT">
        select count(*) from concessions
        <where>
            <if test="name != null">
                name like concat('%',#{name},'%')
            </if>
            <if test="categoryId != null">
                and category_id = #{categoryId}
            </if>
        </where>
    </select>

    <update id="update" >
        update concession
        <set>
            <if test="name != null">
                name = #{entity.name},
            </if>
            <if test="price != null">
                price = #{entity.price},
            </if>
            <if test="categoryId != null">
                category_id = #{entity.categoryId}
            </if>
            <if test="image != null">
                image = #{entity.image}
            </if>
        </set>
        <where>
            id = #{entity.id}
        </where>
    </update>

    <delete id="delete">
        delete from concession
        <where>
            id = #{id}
        </where>
    </delete>

